{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "strict": true /* Enable all strict type-checking options. */,
    "resolveJsonModule": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/__tests__"
  ]
}
